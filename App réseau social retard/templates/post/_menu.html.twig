{% block body %}
    <div class="menu-container">
        <a href="{{ path('app_posts') }}">Tardy Grade</a>
        <a href="{{ path('app_posts') }}">
            <img class="menu-img" src="{{ asset('assets/logo-Tardy-Grade.jpg') }}" alt="Logo Tardy Grade">
        </a>
        <ul class="menu-ul">
            <li class="menu-li"><a href="{{ path('app_etablissements') }}">Établissements</a></li>
            {% if app.user %}
                <li class="menu-li"><a href="{{ path('app_page_utilisateur', {'pseudo': app.user.pseudo}) }}">Mon Compte</a></li>
                <li class="menu-li"><a href="{{ path('app_logout') }}">Déconnexion</a></li>
            {% else %}
                <li class="menu-li"><a href="{{ path('app_register') }}">Inscription</a></li>
                <li class="menu-li"><a href="{{ path('app_login') }}">Connexion</a></li>
            {% endif %}
        </ul>
    </div>
{% endblock %}

{% block stylesheets %}
    <style>
        /* Style pour le menu */
        .menu-container {
            position: fixed;
            top: 0;
            left: 0;
            height: 100%; /* Ajuster la hauteur automatiquement */
            width: 240px; /* Largeur du menu */
            background-color: #f5f5f5; /* Couleur de fond */
            padding: 20px; /* Espacement intérieur */
            color: #fff; /* Couleur du texte */
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .menu-img {
            width: 200px;
            height: 200px;
            border-radius: 100%;
            margin-bottom: 20px; /* Déplacer l'image vers le bas */
        }

        .menu-container a {
            text-decoration: none;
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 20px; /* Déplacer le lien vers le bas */
        }


        .menu-ul {
            list-style-type: none;
            padding: 0;
            margin-top: 0;
        }

        .menu-li {
            margin-bottom: 15px;
        }

        .menu-li a {
            display: inline-block;
            text-decoration: none;
            color: #fff;
            font-size: 18px;
            padding: 10px 20px; /* Ajout de rembourrage */
            border-radius: 5px; /* Coins arrondis */
            background-color: #007bff; /* Couleur de fond */
            transition: all 0.3s ease; /* Animation de transition */
        }

        .menu-li a:hover {
            background-color: #0056b3; /* Changement de couleur au survol */
        }

        /* Style pour le contenu */
        .content {
            padding-left: 280px; /* Ajouter un padding à gauche égal à la largeur du menu + espacement */
        }

    </style>
{% endblock %}
